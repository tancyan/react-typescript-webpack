# Editor configuration, see http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[lib/**.js]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false
