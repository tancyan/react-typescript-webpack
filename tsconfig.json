{
    "compilerOptions": {

        "module": "es6",

        "target": "es6",

        "moduleResolution": "node",

        "lib": ["es6", "dom"],

        "allowJs": true,

        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",

        "allowUnreachableCode": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,

        "outDir": "dist",
        "pretty": true,
        "reactNamespace": "React"
    },
    "exclude": [
        "node_modules",
        "typings",
        "dist"
    ]
}
